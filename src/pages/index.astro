---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import profileImage from "../assets/profile.jpg";
import profileOgImage from "../assets/profile-og.png";

const site = import.meta.env.SITE;
const title = "Anastasia Tulentseva | Engineering Strategy & Leadership";
const description =
  "Creating technical clarity. Delivering solutions that stick.";
const ogImage = new URL(profileOgImage.src, site).href;
const ogImageWidth = String(profileOgImage.width);
const ogImageHeight = String(profileOgImage.height);
---

<Layout
  title={title}
  description={description}
  headerName="Anastasia Tulentseva"
>
  <Fragment slot="head">
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content={ogImageWidth} />
    <meta property="og:image:height" content={ogImageHeight} />
    <meta
      property="og:image:alt"
      content="Professional headshot of Anastasia Tulentseva"
    />
    <meta property="og:url" content={new URL(Astro.url.pathname, site).href} />
    <meta property="og:site_name" content="Anastasia Tulentseva" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    <meta
      name="twitter:image:alt"
      content="Professional headshot of Anastasia Tulentseva"
    />
